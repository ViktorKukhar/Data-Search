<div class="container">

  <div class="form-group mt-5">
    <%= form_with url: '/search', method: :get, remote: true do |form| %>
      <%= form.text_field :search, class: "form-control", placeholder: "Enter your search"%>
      <%= form.submit "Search", class: "btn btn-primary my-3" %>
    <% end %>
  </div>

<table class="table">
  <tbody id="table-body">
      <% @items.each do |item| %>
    <tr>
      <td><%= item.name %></td>
      <td><%= item.category %></td>
      <td><%= item.designed_by %></td>
    </tr>
      <% end %>
   </tbody>
</table>

</div>
<%= javascript_pack_tag 'search' %>
